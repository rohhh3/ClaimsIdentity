@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-left">
    <h1 class="display-4">Welcome</h1>
    <form method="post" autocomplete="off">
        <div class="form-group">
            <label asp-for="Person.Year"></label>
            <input asp-for="Person.Year" class="form-control" />
            <span asp-validation-for="Person.Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Person.FirstName"></label>
            <input asp-for="Person.FirstName" class="form-control" type="text" />
            <span asp-validation-for="Person.FirstName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
    </form>
    @foreach (var item in Model.People)
    {
        <p>
            @Html.DisplayFor(modelItem => item.Year)
            @Html.DisplayFor(modelItem => item.FirstName)
        </p>
    }

</div>